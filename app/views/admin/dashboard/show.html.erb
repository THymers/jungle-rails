<h1>Admin Dashboard</h1>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <div class="card text-center">
        <div class="card-header">
          Products
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= @product_count %> Products</h5>
          <p class="card-text">Total number of products in the store.</p>
          <%= link_to 'View Products', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card text-center">
        <div class="card-header">
          Categories
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= @category_count %> Categories</h5>
          <p class="card-text">Total number of categories in the store.</p>
          <%= link_to 'View Categories', admin_categories_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>